{
  "template": "https://github.com/lkubb/salt-template-formula-compose",
  "commit": "3bf116fca254f07ebcba5a30fcc5f071472ef84a",
  "checkout": null,
  "context": {
    "cookiecutter": {
      "_extensions": [
        "local_extensions.YAMLDumper"
      ],
      "_jinja2_env_vars": {
        "block_start_string": "{!",
        "block_end_string": "!}",
        "variable_start_string": "{=",
        "variable_end_string": "=}",
        "comment_start_string": "{@",
        "comment_end_string": "@}"
      },
      "name": "ArchiveBox",
      "abbr": "archivebox",
      "abbr_pysafe": "archivebox",
      "project_name": "archivebox",
      "containers": "archivebox,sonic,pihole,pywb",
      "git_username": "lkubb",
      "_lookup": {
        "containers": {
          "archivebox": {
            "image": "docker.io/archivebox/archivebox:master"
          },
          "pihole": {
            "image": "docker.io/pihole/pihole:latest"
          },
          "pywb": {
            "image": "docker.io/webrecorder/pywb:latest"
          },
          "sonic": {
            "image": "docker.io/valeriansaliou/sonic:v1.3.1"
          }
        },
        "paths": {
          "data": "data",
          "data_archive": "archive",
          "data_dnsmasq": "dnsmasq",
          "data_pihole": "pihole",
          "data_pywb": "pywb",
          "data_sonic": "sonic",
          "sonic_cfg": "sonic.cfg"
        }
      },
      "_settings": {
        "config": {
          "search_backend": {
            "search_backend_host_name": "sonic",
            "search_backend_password": null
          },
          "server": {
            "bind_addr": "0.0.0.0:4180",
            "secret_key": null
          }
        },
        "pihole": {
          "enable": false,
          "config": {
            "webpassword": null
          },
          "webui_port": 1073
        },
        "pywb": {
          "enable": false
        },
        "sonic": {
          "enable": true,
          "config": {
            "server": {
              "log_level": "warn"
            },
            "channel": {
              "inet": "0.0.0.0:1491",
              "tcp_timeout": 300,
              "auth_password": "${env.SEARCH_BACKEND_PASSWORD}",
              "search": {
                "query_limit_default": 65535,
                "query_limit_maximum": 65535,
                "query_alternates_try": 10,
                "suggest_limit_default": 5,
                "suggest_limit_maximum": 20
              }
            },
            "store": {
              "kv": {
                "path": "/var/lib/sonic/store/kv/",
                "retain_word_objects": 100000,
                "pool": {
                  "inactive_after": 1800
                },
                "database": {
                  "flush_after": 900,
                  "compress": true,
                  "parallelism": 2,
                  "max_files": 100,
                  "max_compactions": 1,
                  "max_flushes": 1,
                  "write_buffer": 16384,
                  "write_ahead_log": true
                }
              },
              "fst": {
                "path": "/var/lib/sonic/store/fst/",
                "pool": {
                  "inactive_after": 300
                },
                "graph": {
                  "consolidate_after": 180,
                  "max_size": 2048,
                  "max_words": 250000
                }
              }
            }
          }
        },
        "wget_dns_fix_disable_ipv6": false
      },
      "_template": "https://github.com/lkubb/salt-template-formula-compose"
    }
  },
  "directory": null
}
